<!-- views/news.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= category %> News</title>

  <!-- Bootstrap CSS (CDN) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  />
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/style.css">

  <!-- Optional: Custom styles -->
  <style>
    body {
      padding: 20px;
      background-color: #f8f9fa;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .table-responsive {
      margin-top: 20px;
    }

    @media (max-width: 768px) {
      td[data-label]::before {
        font-weight: bold;
        content: attr(data-label);
        display: inline-block;
        width: 120px;
        color: #555;
      }
    }
  </style>
</head>
<body>

  <!-- Header Include -->
  <%- include("./components/Header.ejs") %>

  <div class="container">
    <h2><%= category %> News</h2>

    <div class="table-responsive">
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>News Title</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <% newsList.forEach(news => { %>
            <tr>
              <td data-label="Title"><%= news.title %></td>
              <td data-label="Description"><%= news.description %></td>
              <td data-label="News Title"><%= news.newsTitle %></td>
              <td data-label="Link">
                <a href="<%= news.newsLink %>" target="_blank" class="btn btn-sm btn-primary">Read More</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer Include -->
  <%- include("./components/Footer.ejs") %>

  <!-- Bootstrap JS + Popper (Optional) -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
  ></script>
</body>
</html>