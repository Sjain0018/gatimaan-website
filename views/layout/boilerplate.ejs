<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Courses</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <!-- Header -->
  <%- include("../components/Header.ejs") %>

  <!-- Carousel -->
  <%- include("../components/carousel.ejs") %>

  <!-- ðŸ“° News Section Start -->
  <section class="news-section py-5">
    <div class="container">
      <h2 class="mb-4 text-center">Latest Updates</h2>
      <div class="category-wrapper d-flex flex-wrap justify-content-between">
        <!-- Admit Card -->
        <div class="category-box border p-3 rounded mb-3 bg-light" style="flex: 1 1 30%;">
          <h4>Admit Card</h4>
          <ul class="list-group list-group-flush">
            <% if (admitCards && admitCards.length > 0) { %>
              <% admitCards.forEach(news => { %>
                <li class="list-group-item">
                  <a href="/news/Admit%20Card" class="text-decoration-none"><%= news.title %></a>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item">No updates yet.</li>
            <% } %>
          </ul>
        </div>

        <!-- Admission -->
        <div class="category-box border p-3 rounded mb-3 bg-light" style="flex: 1 1 30%;">
          <h4>Admission</h4>
          <ul class="list-group list-group-flush">
            <% if (admissions && admissions.length > 0) { %>
              <% admissions.forEach(news => { %>
                <li class="list-group-item">
                  <a href="/news/Admission" class="text-decoration-none"><%= news.title %></a>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item">No updates yet.</li>
            <% } %>
          </ul>
        </div>

        <!-- Result -->
        <div class="category-box border p-3 rounded mb-3 bg-light" style="flex: 1 1 30%;">
          <h4>Result</h4>
          <ul class="list-group list-group-flush">
            <% if (results && results.length > 0) { %>
              <% results.forEach(news => { %>
                <li class="list-group-item">
                  <a href="/news/Result" class="text-decoration-none"><%= news.title %></a>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item">No updates yet.</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <!-- ðŸ“° News Section End -->

  <!-- ðŸŽ“ Courses Section Start -->
  <section class="courses-section py-5 bg-white">
    <div class="container">
      <h2 class="text-center mb-4">Explore Our Courses</h2>

      <% if (courses && courses.length > 0) { %>
        <div class="row g-4">
          <% courses.forEach(function(course) { %>
            <div class="col-md-4 col-sm-6">
              <div class="card h-100 shadow-sm">
                <img src="<%= course.imageUrl || 'https://placehold.co/600x400' %>" class="card-img-top" alt="<%= course.title %>">

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= course.title %></h5>
                  <p class="card-text text-muted flex-grow-1">
                    <%= course.shortDescription %>
                  </p>
                  <a href="/courses/<%= course._id %>" class="btn btn-primary mt-auto">
                    Read More
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="alert alert-info text-center">
          No courses available yet.
        </div>
      <% } %>
    </div>
  </section>
  <!-- ðŸŽ“ Courses Section End -->

  <!-- Footer -->
  <%- include("../components/Footer.ejs") %>

  <!-- Scripts -->
  <script src="/js/carousel.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>