<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Courses</title>
  <script src="https://cdn.tailwindcss.com"></script> 
</head>
<body class="bg-gray-100 min-h-screen">

  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-8">Our All Courses</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% courses.forEach(function(course) { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <!-- Image -->
            <img src="<%= course.imageUrl %>" alt="<%= course.title %>" class="w-full h-48 object-cover">

            <!-- Content -->
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2"><%= course.title %></h3>
              <p class="text-gray-700 mb-4"><%= course.shortDescription %></p>
              <a href="/courses/<%= course._id %>" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                Read more
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

</body>
</html>