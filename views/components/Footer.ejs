    topBtn.style.display = showBtn ? "block" : "none";

    if (showBtn) {
      whatsappBtn.classList.add("shift-up");
    } else {
      whatsappBtn.classList.remove("shift-up");
    }
  };

  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: "smooth" });
  }
</script>
