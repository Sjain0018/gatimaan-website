<main class="bg-white">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-b from-dark-green to-light-green py-16 md:py-24 overflow-hidden">
    <div class="container mx-auto px-4 flex flex-col-reverse md:flex-row items-center justify-between gap-12">
      <!-- Text Content -->
      <div class="md:w-1/2 space-y-6 text-center md:text-left">
        <h3 class="text-4xl md:text-5xl font-extrabold leading-tight text-white">
          But Degree Paused?<br>
         complete It  <br>
         M.A , B.A,<br>
         MBA , BBA,<br>



        </h3>
        
        <p class="text-lg text-gray-800 max-w-xl">
          We offer world-class courses and expert guidance to help you grow your skills and achieve your dreams.
        </p>
        <div class="flex flex-wrap justify-center md:justify-start gap-4 mt-6">
          <a href="/courses" class="inline-block bg-beige hover:bg-dark-green text-white px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 font-medium">
            Explore Courses
          </a>
          <a href="/contact" class="inline-block border border-beige text-beige hover:bg-beige px-6 py-3 rounded-lg transition-colors duration-300 font-medium">
            Contact Us
          </a>
        </div>
      </div>

      <!-- Image / Illustration -->
      <div class="md:w-1/2 flex justify-center">
        <img src="https://placehold.co/600x400/dark-green/white?text=Education+Hero+Image" alt="Students learning" class="rounded-lg shadow-xl transform transition-transform duration-500 hover:scale-105" />
      </div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-light-green rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-beige rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    <style>
      @keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
      }
      .animate-blob { animation: blob 8s infinite ease-in-out; }
      .animation-delay-2000 { animation-delay: 2s; }
    </style>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Why Choose Us?</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% const features = [
          {
            title: "Expert Instructors",
            desc: "Learn from industry professionals with years of experience.",
            icon: "🧑‍🏫"
          },
          {
            title: "Flexible Learning",
            desc: "Study at your own pace with online and offline options.",
            icon: "🕒"
          },
          {
            title: "Career Support",
            desc: "Get job placement assistance and interview preparation.",
            icon: "💼"
          }
        ] %>

        <% features.forEach(feature => { %>
          <div class="bg-beige p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 border border-beige">
            <div class="text-4xl mb-4"><%= feature.icon %></div>
            <h3 class="text-xl font-semibold text-dark-green mb-2"><%= feature.title %></h3>
            <p class="text-gray-600"><%= feature.desc %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-light-green text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Start Your Journey?</h2>
      <p class="text-lg mb-8 max-w-2xl mx-auto">
        Join thousands of students who have transformed their careers with our programs.
      </p>
      <a href="/register" class="inline-block bg-beige text-dark-green font-semibold px-8 py-3 rounded-lg shadow hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
        Register Now
      </a>
    </div>
  </section>
</main>

